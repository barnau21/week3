<%- include ../partials/head.ejs %>

<%- include ../partials/top-nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter contact name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="companyTextField">Company</label>
                    <input type="text" class="form-control"
                    id="companyTextField"
                    placeholder="Enter the name of the company"
                    name="company" required>
                </div>

                <div class="form-group">
                    <label for="positionTextField">Position</label>
                    <input type="text" class="form-control"
                    id="positionTextField"
                    placeholder="Enter the contact's position"
                    name="position" required>
                </div>

                <div class="form-group">
                    <label for="phoneTextArea">Phone Number</label>
                    <input type="text" class="form-control"
                    id="phoneTextArea"
                    placeholder="Enter the contact's phone number"
                    name="phone" required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter contact's email"
                    name="email" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>



<%- include ../partials/bottom-nav.ejs %>  

