<%- include ../partials/head.ejs %>

<%- include ../partials/top-nav.ejs %>
  

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <h1><%= title %></h1>
            
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <th class="text-center col-2">Name</th>
                    <th class="text-center col-2">Company</th>
                    <th class="text-center col-2">Position</th>
                    <th class="text-center col-3">Phone</th>
                    <th class="text-center col-3">Email</th>
                    <th class="text-center col-1"></th>
                    <th class="text-center col-1"></th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < ContactList.length; count++) { %>
                    <tr class="d-flex">
                        <td class="text-center col-2"><%= ContactList[count].name %></td>
                        <td class="text-center col-2"><%= ContactList[count].company %></td>
                        <td class="text-center col-2"><%= ContactList[count].position %></td>
                        <td class="text-center col-3"><%= ContactList[count].phone %></td>
                        <td class="text-center col-3"><%= ContactList[count].email %></td>
                        <td class="text-center col-1">
                            <a href="/contact-list/edit/<%= ContactList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i> Edit</a>
                        </td>
                        <td class="text-center col-1">
                            <a href="/contact-list/delete/<%= ContactList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                <% } %>
            </table>
            <a style="margin-top: 20px" href="/contact-list/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add New Contact</a>
                <br>
        </div>
    </div>
  </main>
  
<%- include ../partials/bottom-nav.ejs %>  


  





